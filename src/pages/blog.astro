---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
import RecentPosts from "../components/RecentPosts.astro";
import Test from "../components/Test.svelte";
const allPosts = await Astro.glob("./posts/*.mdx");
const pageTitle = "Dan Collins | Blog";
---

<BaseLayout pageTitle={pageTitle}>
    <div class="container">
        <article class="blog-card">
            <h2 class="blog-card__title roboto-bold">About this blog</h2>
            <p class="blog-card__desc roboto-thin">
                I like to learn new things and talk through problems I've
                encountered and <em>my</em> solutions. This includes game development
                as well as web development.
            </p>
        </article>
        <RecentPosts />
        <!-- <Test posts={allPosts}/> -->
    </div>
</BaseLayout>

<style>
    .blog-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0.25rem;
        background-color: hsl(240, 9%, 25%);
        width: 100%;
        justify-content: center;
        color: white;
        box-shadow: inset 0px 0px 10px 0px rgba(222, 166, 166, 0.762);
    }

    .blog-card__title {
        padding: 1rem;
    }

    .blog-card__desc {
        line-height: 1.5rem;
        padding: 0.25rem 1rem;
    }

    .container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-top: 1rem;
        padding-bottom: 1rem;
    }
</style>
