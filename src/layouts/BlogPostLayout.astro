---
import BlogPostTitle from "../components/blog/BlogPostTitle.svelte";
import HomeLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<HomeLayout pageTitle=`Dan Collins | ${frontmatter.title}`>
    <section class="blog-post-container">
        <BlogPostTitle {frontmatter} />
        <div class="content-card roboto-thin">
            <slot />
        </div>
    </section>
</HomeLayout>
<style is:global>
    .blog-label {
        padding: 0.5rem;
    }

    .content-card {
        display: flex;
        flex-direction: column;
        padding: 1rem;
        background-color: hsl(240, 9%, 25%);
        width: 100%;
        line-height: 2rem;
        justify-content: center;
        grid-area: content;
        color: white;
        box-shadow: inset 0px 0px 10px 0px rgba(222, 166, 166, 0.762);
    }

    .blog-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem;
        background-color: hsl(240, 9%, 25%);
        width: 100%;
        justify-content: center;
        grid-area: blog;
        color: white;
        line-height: 2rem;
        box-shadow: inset 0px 0px 10px 0px rgba(222, 166, 166, 0.762);
    }
    .blog-post-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-top: 1rem;
        padding-bottom: 1rem;
    }

    ol {
        padding: 0.5rem;
    }

    li {
        font-size: 1em;
    }

    strong {
        font-size: 1rem;
    }

    h1 {
        font-size: 2em;
    }

    h2 {
        font-size: 1.5em;
    }
    h6 {
        font-size: 0.67em;
    }
</style>
