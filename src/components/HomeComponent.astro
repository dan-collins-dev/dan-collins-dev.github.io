<style>
    * {
        color: white;
    }


    .grid {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        grid-template-areas: 
        "prof"
        "about"
        "skills"
        "latest";
        gap: 1rem;
        padding-top: 1rem;
        padding-bottom: 1rem;
    }

    
    @media (width >= 700px) {
        .grid {
            grid-template-columns: repeat(4, 1fr);
            grid-template-rows: 1fr 1fr 1fr;
            grid-template-areas: 
            "prof prof about about"
            "prof prof skills skills"
            "latest latest . .";
        }
    }
    
</style>