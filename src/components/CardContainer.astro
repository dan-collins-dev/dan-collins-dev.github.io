---
import ProfileCard from "./ProfileCard.astro"
import SkillsCard from "./SkillsCard.astro"
---
<section>
    <ProfileCard />
    <SkillsCard />
</section>

<style>
    section {
        display: flex;
        flex-direction: column;
        align-items: center;
        /* background-color: hsl(238, 21%, 23%); */
        border-radius: 0.5rem;
        /* max-width: 500px; */
        color: white;
        gap: 1rem;
    }

    @media (width >= 700px) {
        section {
            flex-direction: row;
            align-items: flex-start;
        }
    }
</style>