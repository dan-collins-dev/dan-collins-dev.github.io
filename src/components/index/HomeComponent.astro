---
import ProfileCard from "./ProfileCard.astro";
import SkillsCard from "./SkillsCard.astro";
import AboutMeCard from "./AboutMeCard.astro";
import LatestPost from "../LatestPost.astro";
import ContactCard from "./ContactCard.astro";
---

<div class="home-component">
    <ProfileCard />
    <AboutMeCard />
    <SkillsCard />
    <div class="bottom-row">
        <LatestPost />
        <ContactCard />
    </div>
</div>

<style>
    * {
        color: white;
    }

    .bottom-row {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .home-component {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-top: 1rem;
        padding-bottom: 1rem;
        flex: 1;
    }

    @media (width >= 700px) {
        .bottom-row {
            flex-direction: row;
            width: 100%;
            max-height: none;
        }
    }
</style>
