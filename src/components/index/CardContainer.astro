---
import ProfileCard from "./ProfileCard.astro";
import SkillsCard from "./SkillsCard.astro";
import AboutMeCard from "./AboutMeCard.astro";
---

<section>
    <ProfileCard />
    <AboutMeCard />
    <SkillsCard />
</section>

<style>
    section {
        display: flex;
        flex-direction: column;
        align-items: center;
        border-radius: 0.5rem;
        color: white;
        gap: 1rem;
    }

    @media (width >= 700px) {
        section {
            flex-direction: row;
            align-items: normal;
        }
    }
</style>
